---
import ListCards from '../layouts/ListCards.astro';
---

<ul class="grid">
    <ListCards></ListCards>
</ul>

<style is:global>
    .grid {
        display: grid;
        gap: 1rem;
        grid-auto-flow: dense;
        grid-auto-rows: minmax(min-content, 20rem);
        grid-template-columns: repeat(auto-fit, minmax(min(100%, 22rem), 1fr));
    }
</style>